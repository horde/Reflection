  <dir baseinstalldir="/" name="/">
   <dir name="doc">
    <dir name="Horde">
     <dir name="Reflection">
      <file name="CHANGES" role="doc" />
      <file name="COPYING" role="doc" />
     </dir> <!-- /doc/Horde/Reflection -->
    </dir> <!-- /doc/Horde -->
   </dir> <!-- /doc -->
   <dir name="lib">
